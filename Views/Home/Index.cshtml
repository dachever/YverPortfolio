<!-- Script to update category title dynamically -->
<script>
    const carouselElement = document.getElementById('projectsCarousel');
    const categoryTitle = document.getElementById('projectCategoryTitle');

    carouselElement.addEventListener('slide.bs.carousel', function (event) {
        const nextSlide = event.relatedTarget;
        const category = nextSlide.getAttribute('data-category');
        categoryTitle.textContent = category;
    });
</script>



