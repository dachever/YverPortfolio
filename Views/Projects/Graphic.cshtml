@{
    ViewData["Title"] = "Graphic Design";
}

<div class="container mt-5">
    <h1 class="mb-3">Graphic Design</h1>

    <div id="graphicCarousel" class="carousel slide project-carousel mb-4" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="@(Url.Content("~/images/projects/graphic1.jpg"))" class="d-block mx-auto" alt="Graphic 1">
                <div class="carousel-caption d-none d-md-block">
                    <p><strong>How I made this:</strong> Short description of tools/process.</p>
                    <p><strong>Strength:</strong> Typography • <strong>Weakness:</strong> Time management</p>
                </div>
            </div>

            <div class="carousel-item">
                <img src="@(Url.Content("~/images/projects/graphic2.jpg"))" class="d-block mx-auto" alt="Graphic 2">
                <div class="carousel-caption d-none d-md-block">
                    <p><strong>How I made this:</strong> Short description for slide 2.</p>
                    <p><strong>Strength:</strong> Color use • <strong>Weakness:</strong> Layout balance</p>
                </div>
            </div>

            <div class="carousel-item">
                <img src="@(Url.Content("~/images/projects/graphic3.jpg"))" class="d-block mx-auto" alt="Graphic 3">
                <div class="carousel-caption d-none d-md-block">
                    <p><strong>How I made this:</strong> Short description for slide 3.</p>
                    <p><strong>Strength:</strong> Illustration • <strong>Weakness:</strong> Fine detail</p>
                </div>
            </div>
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#graphicCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#graphicCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <a asp-controller="Projects" asp-action="Index" class="btn btn-secondary">Back to Projects</a>
</div>
