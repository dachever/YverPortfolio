@{
    ViewData["Title"] = "Web Development";
}

<div class="container mt-5">
    <h1 class="mb-3">Web Development</h1>

    <div id="webCarousel" class="carousel slide project-carousel mb-4" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/projects/web1.jpg" class="d-block mx-auto" alt="Web Project 1" style="height:2in;">
                <div class="carousel-caption d-none d-md-block">
                    <p><strong>How I built this:</strong> ASP.NET Core + Bootstrap.</p>
                    <p><strong>Strength:</strong> Responsive layout • <strong>Weakness:</strong> Complex logic</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/projects/web2.jpg" class="d-block mx-auto" alt="Web Project 2" style="height:2in;">
                <div class="carousel-caption d-none d-md-block">
                    <p><strong>How I built this:</strong> HTML/CSS portfolio site.</p>
                    <p><strong>Strength:</strong> Clean design • <strong>Weakness:</strong> SEO</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/projects/web3.jpg" class="d-block mx-auto" alt="Web Project 3" style="height:2in;">
                <div class="carousel-caption d-none d-md-block">
                    <p><strong>How I built this:</strong> Simple CRUD system.</p>
                    <p><strong>Strength:</strong> Database handling • <strong>Weakness:</strong> UI polish</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#webCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#webCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>

    <a asp-controller="Projects" asp-action="Index" class="btn btn-secondary">Back to Projects</a>
</div>
