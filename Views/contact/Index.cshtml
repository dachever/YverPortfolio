@model MyPortfolio.Models.ContactFormModel

<div class="container mt-5" style="max-width: 650px; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-5">
            <h2 class="text-center mb-4 fw-bold" style="color:#2c3e50;">Get In Touch</h2>
            <p class="text-center text-muted mb-4">
                Have a question or want to work together? Fill out the form below.
            </p>

            <!-- Success / Error Message -->
            @if (ViewBag.Message != null)
            {
                var isSuccess = ViewBag.Message.ToString().Contains("✅");
                <div class="alert @(isSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show shadow-sm" role="alert">
                    <i class="bi @(isSuccess ? "bi-check-circle-fill" : "bi-exclamation-triangle-fill")"></i>
                    <span class="ms-2">@ViewBag.Message</span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Contact Form -->
            <form method="post" class="needs-validation" novalidate>
                <div class="mb-4">
                    <label asp-for="Name" class="form-label fw-semibold">
                        <i class="bi bi-person-fill me-2 text-primary"></i>Name
                    </label>
                    <input asp-for="Name" class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Enter your full name" required />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Email" class="form-label fw-semibold">
                        <i class="bi bi-envelope-fill me-2 text-primary"></i>Email
                    </label>
                    <input asp-for="Email" type="email" class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Enter your email address" required />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Subject" class="form-label fw-semibold">
                        <i class="bi bi-chat-left-text-fill me-2 text-primary"></i>Subject
                    </label>
                    <input asp-for="Subject" class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Subject of your message" required />
                    <span asp-validation-for="Subject" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Message" class="form-label fw-semibold">
                        <i class="bi bi-pencil-square me-2 text-primary"></i>Message
                    </label>
                    <textarea asp-for="Message" rows="5" class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Write your message here..." required></textarea>
                    <span asp-validation-for="Message" class="text-danger small"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg rounded-3 shadow-sm">
                        <i class="bi bi-send-fill me-2"></i> Send Message
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
